<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="receiptContent"
            type="com.github.hamatoshi.receiptkeeper.data.ReceiptContent" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/list_receipt_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/text_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/spacing_small"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:text="@{receiptContent.category}"
            tools:text="category"/>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/text_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/spacing_small"
            app:layout_constraintStart_toEndOf="@+id/text_category"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:text="@{receiptContent.item}"
            tools:text="item name"/>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/text_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/spacing_small"
            app:layout_constraintStart_toEndOf="@id/text_item"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:price="@{receiptContent}"
            tools:text="1000" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/text_tax_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/spacing_small"
            app:layout_constraintStart_toEndOf="@+id/text_price"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:taxType="@{receiptContent}"
            tools:text="tax included" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>