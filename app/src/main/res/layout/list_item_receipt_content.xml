<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="receiptContent"
            type="com.github.hamatoshi.receiptkeeper.data.ReceiptContent" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/list_receipt_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- price -->
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/text_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_small"
            android:layout_marginBottom="@dimen/spacing_small"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:price="@{receiptContent.price}"
            tools:text="1000" />

        <!-- tax -->
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tax"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_small"
            app:layout_constraintStart_toEndOf="@+id/text_price"
            app:layout_constraintTop_toTopOf="@+id/text_price"
            app:tax="@{receiptContent}"
            tools:text="8%" />

        <!-- tax type -->
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/text_tax_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_small"
            app:layout_constraintStart_toEndOf="@+id/tax"
            app:layout_constraintTop_toTopOf="@+id/text_price"
            app:taxType="@{receiptContent}"
            tools:text="tax included" />

        <!-- category -->
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/text_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_small"
            app:layout_constraintStart_toEndOf="@id/text_tax_type"
            app:layout_constraintTop_toTopOf="@+id/text_price"
            android:text="@{receiptContent.category}"
            tools:text="category"/>

        <!-- item -->
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/text_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_small"
            app:layout_constraintStart_toEndOf="@+id/text_category"
            app:layout_constraintTop_toTopOf="@+id/text_price"
            android:text="@{receiptContent.item}"
            tools:text="item name"/>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>